<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal|bottom"
    android:layoutAnimation="@anim/layout_animation"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboarding_imageview_icon"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="centerInside"
        android:src="@drawable/onboarding_ic_content_1" />

    <TextView
        android:id="@+id/onboarding_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="@string/onboarding_title_content1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/onboarding_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_horizontal"
        android:text="@string/onboarding_text_content1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_11ssp" />

</LinearLayout>