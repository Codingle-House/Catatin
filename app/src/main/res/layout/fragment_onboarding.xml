<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp">

    <ImageView
        android:id="@+id/onboarding_imageview_icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_ic_content_1" />

    <TextView
        android:id="@+id/onboarding_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="@string/onboarding_title_content1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/onboarding_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/onboarding_text_content1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="italic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />
</LinearLayout>