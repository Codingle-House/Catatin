<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboarding_imageview_icon"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80sdp"
        android:scaleType="centerInside"
        android:src="@drawable/onboarding_ic_content_1" />

    <TextView
        android:id="@+id/onboarding_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:text="@string/onboarding_title_content1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/onboarding_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_horizontal"
        android:text="@string/onboarding_text_content1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_11ssp" />

</LinearLayout>