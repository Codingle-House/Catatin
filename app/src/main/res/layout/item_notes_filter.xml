<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/uiKitColorPrimary"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dialog_textview_menufilter_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_11ssp"
        tools:text="Catatan" />

    <ImageView
        android:id="@+id/dialog_imageview_menufilter_check"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="12sp"
        android:layout_alignTop="@id/dialog_textview_menufilter_item_title"
        android:layout_alignBottom="@id/dialog_textview_menufilter_item_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/general_ic_check" />

    <View
        android:id="@+id/dialog_view_menufilter_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dialog_textview_menufilter_item_title"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/uiKitColorLine" />
</RelativeLayout>