<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_imageview_icon"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/dialog_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            tools:text="Lewati Halaman Ini" />

        <TextView
            android:id="@+id/dialog_textview_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center_horizontal"
            android:lines="3"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            tools:text="Pilih iya jika kamu sudah paham, dan kamu akan melewati halaman ini" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/uiKitColorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/dialog_textview_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                tools:text="No" />

            <TextView
                android:id="@+id/dialog_textview_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                tools:text="Yes" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>