<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_imageview_icon"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp" />

        <TextView
            android:id="@+id/dialog_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp"
            tools:text="Lewati Halaman Ini" />

        <TextView
            android:id="@+id/dialog_textview_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center_horizontal"
            android:lines="3"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11ssp"
            tools:text="Pilih iya jika kamu sudah paham, dan kamu akan melewati halaman ini" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/uiKitColorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/dialog_textview_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal"
                android:padding="@dimen/_16sdp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11ssp"
                tools:text="No" />

            <LinearLayout
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_44sdp"
                android:background="@color/uiKitColorLine" />

            <TextView
                android:id="@+id/dialog_textview_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:padding="@dimen/_16sdp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11ssp"
                tools:text="Yes" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>