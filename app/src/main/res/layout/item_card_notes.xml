<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorDefaultCard"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/note_textview_notes_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextHint"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="24 Agustus 16:25" />

        <TextView
            android:id="@+id/note_textview_notes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Lorem Ipsum Color Sit Ame" />

        <TextView
            android:id="@+id/note_textview_notes_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="Catatan" />

        <TextView
            android:id="@+id/note_textview_notes_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Lorem ipsum dolor sit ame, onsctetur adipiscing elit, Lorem ipsum dolor sit ame, onsctetur adipiscing elit, Lorem ipsum dolor sit ame, onsctetur adipiscing elit." />
    </LinearLayout>
</androidx.cardview.widget.CardView>